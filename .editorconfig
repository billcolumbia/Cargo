root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 4 space indentation
[*.php]
indent_style = space
indent_size = 4

# Indentation override for all JS under lib directory
[*.{js,json,jsx,yml}]
indent_style = space
indent_size = 2

